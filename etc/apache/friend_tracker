<VirtualHost friend_tracker.cowholio4.com>
        ServerName friend_tracker.cowholio4.com
        DocumentRoot /mnt/trunk/github/friend_tracker/web

        <Directory /mnt/trunk/github/friend_tracker/web>
            AllowOverride None
            Order allow,deny
            Allow from all
        </Directory>

        <Location />
            SetHandler perl-script
            PerlHandler Plack::Handler::Apache2
            PerlSetVar psgi_app /mnt/trunk/github/friend_tracker/web/app.pl
        </Location>

        ErrorLog  /var/log/apache/friend_tracker_error
        CustomLog /var/log/apache/friend_tracker_access common
</VirtualHost>
